# GearGuard Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Application Settings
# ===========================================
APP_NAME=GearGuard
APP_ENV=development
DEBUG=true
API_VERSION=v1

# ===========================================
# Turso Database
# ===========================================
# Get these from: https://turso.tech/app
TURSO_DATABASE_URL=libsql://your-database-name.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here

# Local database file (for embedded replicas)
LOCAL_DB_PATH=./local.db

# ===========================================
# JWT Authentication
# ===========================================
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:8000,http://127.0.0.1:8080

# ===========================================
# Email Configuration (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=GearGuard
SMTP_FROM_EMAIL=noreply@gearguard.com
SMTP_TLS=true

# ===========================================
# File Upload Settings
# ===========================================
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/gearguard.log

# ===========================================
# Rate Limiting (Optional)
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# ===========================================
# Super Admin (First User Setup)
# ===========================================
SUPER_ADMIN_EMAIL=admin@gearguard.com
SUPER_ADMIN_PASSWORD=ChangeThisPassword123!
